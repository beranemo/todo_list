
<div style="text-align:center;"><h2>What do you doing?</h2></div>

<div class="form container">
<%= form_for @todo, :url => todos_path do |f| %>
<div class="form-group">
  <%= f.label :event, "Event" %>
  <%= f.text_field :event , class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :due_date, "Due_date" %>
  <%= f.text_field :due_date , class: "form-control"%>
</div>
<div class="form-group">
  <%= f.label :description, "Description" %>
  <%= f.text_area :description , class: "form-control"%>
</div>
<div class="form-group">
  <%= f.label :finish, "finish" %>
  <%= f.text_area :finish , class: "form-control"%>
</div>

<div class="form-group">
  <%= f.submit "Create" %>
  </div>
<% end %>

<% if @todo.errors.present? %>
  <ul>
    <% @todo.errors.each do |error, message| %>
      <li> <%= "#{error.capitalize}  #{message}" %></li>
    <% end %>
  </ul>
<% end %>
